    "user": "<%= mongoUser%>",
    "pass": "<%= mongoPass%>",
    "database": "<%= mongoDB%>",
    "host": "<%= mongoHost%>",
    "port": "<%= mongoPort%>"
  }]<% }%><% if (mysql) {%>,
  "mysql": {
